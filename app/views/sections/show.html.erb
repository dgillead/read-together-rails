<h1 class="text-center"><%= @section.title %></h1>
<h2 class="text-center"><%= @section.book_discussion.book_title %></h2>
<p class="text-center">By: <%= @section.book_discussion.book_author %></p>
<p class="text-center"><%= image_tag(@section.book_discussion.book_image_url, :alt => "Cover Image") %></p>

<% if @section.book_discussion.user_id == current_user.id %>

  <div class="text-center">
    <div class="dropdown">
      <button class="btn btn-info dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
        Options
        <span class="caret"></span>
      </button>
      <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
        <li><%= link_to 'Delete Section', section_path(@section), method: :delete, data: {confirm: "Are you sure? This will delete all comments for this section as well."} %></li>
        <li><%= link_to 'Edit Section', edit_section_path(@section) %></li>
      </ul>
    </div>
  </div>
  
<% end %>

<hr>

