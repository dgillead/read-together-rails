
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="text-center user-container">
    <h1 class="header-style">Log in</h1>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, class: "form-input", required: "required" %>
    </div>

    <div class="field">
      <%= f.label :password %><br />
      <%= f.password_field :password, autocomplete: "off", class: "form-input", required: "required" %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>

    <div class="actions">
      <%= f.submit "Log in", class: "btn btn-success" %>
    </div>

  </div>
<% end %>
