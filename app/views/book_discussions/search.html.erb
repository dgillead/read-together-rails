<h1 class="text-center">Search Results</h1>

<% @books.each do |book| %>
<hr>
  <div class="row">
    <div class="col-xs-2 text-right">
      <%= image_tag(book[2], :alt => "Cover Image") %>
    </div>
    <div class="col-xs-10 text-left">
      <p><%= book[0] %></p>
      <p><%= book[1] %></p>
    </div>
  </div>
<hr>
<% end %>
