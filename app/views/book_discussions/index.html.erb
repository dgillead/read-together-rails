<% if current_user %>
  <h1 class="text-center header-style">Discussions You've Created</h1>

  <hr class="discussion-divider">

  <% if current_user.book_discussions.any? %>
    <%= render 'created_discussions', { user_discussions: current_user.book_discussions } %>
  <% else %>
    <p class="text-center">You haven't created any discussions yet. Search for a book to get started.</p>
  <% end %>

  <h1 class="text-center header-style">Discussions You're Invited To</h1>

  <hr class="discussion-divider">

  <% if @book_discussions != [] %>
    <%= render 'invited_discussions', { book_discussions: @book_discussions } %>
  <% else %>
    <p class="text-center">You haven't been invited to any discussions yet.</p>
  <% end %>

  <h1 class="text-center header-style">Discussions You've Saved</h1>

  <hr class="discussion-divider">

  <% if current_user.saved_discussions != [] %>
    <%= render 'saved_discussions', { saved_discussions: @saved_discussions } %>
  <% else %>
    <p class="text-center">You have not saved any discussions yet. Only public discussions can be saved. Private discussions that you can participate in will automatically appear under "Discussions You're Invited To".</p>
  <% end %>
<% end %>
